{
  "name": "backend",
  "version": "1.0.0",
  "description": "Minimal Node HTTP backend with TypeScript, token auth, static serving.",
  "main": "dist/src/server.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start": "dotenv -e ../.env -- node dist/src/server.js",
    "dev": "dotenv -e ../.env -- nodemon --exec ts-node src/server.ts",
    "clean": "rm -rf dist && rm -rf node_modules",
    "test": "dotenv -e ../.env.test -- jest"
  },
  "dependencies": {
    "dotenv": "^17.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^24.0.15",
    "dotenv-cli": "^9.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}


